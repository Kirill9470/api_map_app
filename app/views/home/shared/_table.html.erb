<%- model_class = Building -%>
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-4">
        <h3>Список зданий</h3>
      </div>
      <div class="col-md-8">
        <%= text_field_tag :distance, params[:distance], class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <table class="table" id="buildings-tables" data-url="<%= buildings_path %>">
          <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col"><%= model_class.human_attribute_name(:address) %></th>
            <th scope="col">Растояние, км</th>
            <th scope="col">Действия</th>
          </tr>
          </thead>
          <tbody id="table-body">
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>