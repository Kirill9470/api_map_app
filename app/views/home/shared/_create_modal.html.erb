<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <%= simple_form_for Building.new, html: {id: 'building-form', data: {model: 'building'}} do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Добавить адрес</h4>
        </div>
        <div class="modal-body">
          <%= f.input :street, require: true, label: 'Улица' %>
          <%= f.input :house, require: true, label: 'Дом' %>
        </div>
        <div class="modal-footer">
          <%= link_to 'Добавить', '#', class: 'btn btn-success', id: 'submit-button' %>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
        </div>
      </div>
    <% end %>
  </div>
</div>